<div class="row">
  <form method="get" action="/process"
    id='calcDistribution' class="col-md-6 col-sm-12">
    <div class="row ">
      <h1 class="text-center h3 fw-normal">Input data</h1>
    </div>
    
    <div class='row m-2'>
      <div class="form-floating col-6">
        <input type="number" step="0.2" name="probability" class='form-control' autofocus>
        <label class="ms-1">Success</label>
      </div>

      <div class="form-floating col-6">
        <input type="number" name="quantity" class='form-control' autofocus>
        <label class="ms-1">Quantity</label>
      </div>
    </div>

    <div class='row justify-content-center'>
      <button class='btn btn-lg btn-primary col-6' >
          Calculate
      </button>
    </div>
  </form>

  <div class="col-md-6 col-sm-12">
    <div class="row" id="chartSpace">
      <canvas></canvas>
    </div>
    <div hidden id="distInfo" class="m-2">
      <ul class="list-group">
        <li class="list-group-item d-flex justify-content-between align-items-center">
          Expect mean
          <span id="infoExMean" class="badge bg-primary rounded-pill"></span>
        </li>

        <li class="list-group-item d-flex justify-content-between align-items-center">
          Actual mean
          <span id="infoAcMean" class="badge bg-primary rounded-pill"></span>
        </li>

        <li class="list-group-item d-flex justify-content-between align-items-center">
          Variance
          <span id="infoVariance" class="badge bg-primary rounded-pill"></span>
        </li>

        <li class="list-group-item d-flex justify-content-between align-items-center">
          Standart mistake
          <span id="infoMistake" class="badge bg-primary rounded-pill"></span>
        </li>

        <li class="list-group-item d-flex justify-content-between align-items-center">
          Delta
          <span id="infoDelta" class="badge bg-primary rounded-pill"></span>
        </li>

        <li class="list-group-item d-flex justify-content-between align-items-center">
          Border
          <span id="infoBorder" class="badge bg-primary rounded-pill"></span>
        </li>

        <li class="list-group-item d-flex justify-content-between align-items-center">
          Quality
          <span id="infoQuality" class="badge bg-primary rounded-pill"></span>
        </li>

        <li class="list-group-item d-flex justify-content-between align-items-center">
          PDF: Win
          <span id="infoPdfS" class="badge bg-primary rounded-pill"></span>
        </li>

        <li class="list-group-item d-flex justify-content-between align-items-center">
          PDF: Lose
          <span id="infoPdfF" class="badge bg-primary rounded-pill"></span>
        </li>

      </ul>
    </div>

    <div class="row justify-content-center">
      <button hidden method='post' action='/export/create' 
        id='generateExport' class='btn btn-lg btn-primary col-6'>
        Export CSV
      </button>
      <div class="m-2"></div>
    </div>
  </div>
</div>

<script src="vendor/chart.min.js"></script>
<script src="vendor/jquery-3.6.1.min.js"></script>
<script src="index.js"></script>