<div class="row">
  <form method="get" action="/process" class="col-md-6 col-sm-12" id='calcDistribution'>
    <div class="row ">
      <h1 class="text-center h3 fw-normal">Input data</h1>
    </div>
    
    <div class='row m-2'>
      <div class="form-floating col-6">
        <input type="number" step="0.2" name="cdf" class='form-control' autofocus>
        <label class="ms-1">CDF</label>
      </div>

      <div class="form-floating col-6">
        <input type="number" step="0.2" name="pdf" class='form-control' autofocus>
        <label class="ms-1">PDF</label>
      </div>
    </div>

    <div class='row m-2'>
      <div class="form-floating col-6">
        <input type="number" step="0.2" name="mean" class='form-control' autofocus>
        <label class="ms-1">Mean</label>
      </div>

      <div class="form-floating col-6">
        <input type="number" step="0.2" name="mode" class='form-control' autofocus>
        <label class="ms-1">Mode</label>
      </div>
    </div>

    <div class='row justify-content-center'>
      <button class='btn btn-lg btn-primary col-6' >
          Calculate
      </button>
    </div>
  </form>

  <div class="col-md-6 col-sm-12">
    <div class="row" id="chartSpace">
      <canvas></canvas>
    </div>
    <div class="row justify-content-center">
      <div id="exportSpace"></div>
    </div>
  </div>
</div>

<script src="vendor/chart.min.js"></script>
<script src="vendor/jquery-3.6.1.min.js"></script>
<script src="index.js"></script>